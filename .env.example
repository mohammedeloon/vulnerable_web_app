# Django Settings
# ===============

# SECRET_KEY - مفتاح سري قوي (مطلوب)
# لإنشاء مفتاح جديد: python -c 'import secrets; print(secrets.token_urlsafe(50))'
DJANGO_SECRET_KEY=your-secret-key-here

# DEBUG - وضع التطوير (اجعلها False في الإنتاج)
DJANGO_DEBUG=False

# ALLOWED_HOSTS - النطاقات المسموح بها (مطلوب في الإنتاج)
# مثال: DJANGO_ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Database Settings
# =================
# يمكنك إضافة إعدادات قاعدة البيانات هنا إذا لزم الأمر
# DATABASE_URL=postgresql://user:password@localhost/dbname
